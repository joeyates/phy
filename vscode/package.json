{
  "name": "phy",
  "displayName": "Phy",
  "description": "Conveniences for Elixir Phoenix development",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.phy.switch",
        "title": "Switch between test and implementation files"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Phy",
      "properties": {
        "Phy.elixir.implementationMatcher": {
          "type": "string",
          "default": "lib\\/(.*?)\\.ex$",
          "description": [
            "A regular expression to match Elixir implementation files.",
            "It's captures must match those in implementationReplacer"
          ]
        },
        "Phy.elixir.implementationReplacer": {
          "type": "string",
          "default": "test/$1_test.exs",
          "description": [
            "A string to replace the captures from Phy.elixir.implementationMatcher",
            "to get the test file"
          ]
        },
        "Phy.elixir.testMatcher": {
          "type": "string",
          "default": "test\\/(.*?)_test\\.exs$",
          "description": [
            "A regular expression to match the test file",
            "It's captures must match those in testReplacer"
          ]
        },
        "Phy.elixir.testReplacer": {
          "type": "string",
          "default": "lib/$1.ex",
          "description": [
            "A string to replace the captures from testMatcher",
            "to get the implementation file"
          ]
        },
        "Phy.ruby.implementationMatcher": {
          "type": "string",
          "default": "lib\\/(.*?)\\.rb$",
          "description": [
            "A regular expression to match Ruby implementation files.",
            "It's captures must match those in implementationReplacer"
          ]
        },
        "Phy.ruby.implementationReplacer": {
          "type": "string",
          "default": "test/$1_test.rb",
          "description": [
            "A string to replace the captures from implementationMatcher",
            "to get the test file"
          ]
        },
        "Phy.ruby.testMatcher": {
          "type": "string",
          "default": "test\\/(.*?)_test\\.rb$",
          "description": [
            "A regular expression to match the test file",
            "It's captures must match those in testReplacer"
          ]
        },
        "Phy.ruby.testReplacer": {
          "type": "string",
          "default": "lib/$1.rb",
          "description": [
            "A string to replace the captures from testMatcher",
            "to get the implementation file"
          ]
        }
      }
    },
    "keybindings": [
      {
        "command": "extension.phy.switch",
        "key": "ctrl+`",
        "mac": "cmd+`",
        "when": "editorTextFocus"
      }
    ],
    "snippets": [
      {
        "language": "elixir",
        "path": "./snippets/elixir.json"
      },
      {
        "language": "phoenix-heex",
        "path": "./snippets/phoenix-heex.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9"
  }
}