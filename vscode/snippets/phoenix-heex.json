{
  "LiveView form": {
    "prefix": "lvform",
    "body": [
      "<.simple_form for={@form} id=\"${1:name}-form\" phx-change=\"validate\" phx-submit=\"${2:save}\">",
      "  $0",
      "  <:actions>",
      "    <.button phx-disable-with=\"${3:Saving}...\">${4:Save}</.button>",
      "  </:actions>",
      "</.simple_form>"
    ],
    "description": [
      "Create a LiveView form.",
      "Placeholder 1: the lowercase form name,",
      "Placeholder 2: the save action, defaults to \"save\",",
      "Placeholder 3: the text to be shown while submitting, defaults to \"Saving...\",",
      "Placeholder 4: the save button label, defaults to \"Save\"."
    ]
  },
  "LiveView input text": {
    "prefix": "lvinputtext",
    "body": [
      "<.input field={@form[:${1:field}]} type=\"text\" label=\"${2:Label}\" />"
    ],
    "description": [
      "Create a LiveView input text.",
      "Placeholder 1: the lowercase field name,",
      "Placeholder 2: the label."
    ]
  }
}